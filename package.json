{
  "name": "hightable",
  "version": "0.11.0",
  "description": "A dynamic windowed scrolling table component for react",
  "author": "Hyperparam",
  "homepage": "https://hyperparam.app",
  "keywords": [
    "component",
    "data",
    "grid",
    "javascript",
    "react",
    "scrolling",
    "table",
    "windowed",
    "virtualized"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyparam/hightable.git"
  },
  "type": "module",
  "main": "./dist/HighTable.umd.cjs",
  "module": "./dist/HighTable.js",
  "exports": {
    ".": {
      "types": "./dist/types/HighTable.d.ts",
      "import": "./dist/HighTable.js",
      "require": "./dist/HighTable.umd.cjs"
    },
    "./src/HighTable.css": "./dist/HighTable.css"
  },
  "files": [
    "dist"
  ],
  "types": "./dist/types/HighTable.d.ts",
  "scripts": {
    "build": "vite build && tsc -b && cp src/HighTable.css dist/HighTable.css",
    "coverage": "vitest run --coverage --coverage.include=src",
    "lint": "eslint",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@testing-library/react": "16.2.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "22.13.5",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5",
    "@vitejs/plugin-react": "4.3.4",
    "@vitest/coverage-v8": "3.0.6",
    "eslint": "9.21.0",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.1.0",
    "globals": "15.14.0",
    "jsdom": "26.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.23.0",
    "vite": "6.2.0",
    "vitest": "3.0.6"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
